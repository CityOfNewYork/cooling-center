    "predeploy": "yarn build",
    "deploy": "node deploy"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CityOfNewYork/cooling-center.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/CityOfNewYork/cooling-center/issues"
  },
  "homepage": "https://github.com/CityOfNewYork/cooling-center#readme",
  "dependencies": {
    "jquery": "^3.3.1",
    "nyc-build-helper": "^0.0.40",
    "nyc-lib": "^1.4.43",
    "ol": "^6.5.0",
    "papaparse": "^5.3.0",
    "proj4": "^2.4.4"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/preset-env": "^7.4.5",
    "babel-jest": "^24.8.0",
    "babel-loader": "^8.0.6",
    "coveralls": "^3.0.2",
    "dotenv": "^8.2.0",
    "ghooks": "^2.0.4",
    "jest": "^24.8.0",
    "jest-canvas-mock": "^2.2.0",
    "jest-fetch-mock": "^2.1.2",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11"
  },
  "jest": {
    "verbose": true,
    "automock": false,
    "testMatch": [
      "**/__tests__/**/*.test.js"
