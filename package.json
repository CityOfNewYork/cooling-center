    "setupFiles": [
      "./__tests__/jest-setup.js"
    ],
    "transformIgnorePatterns": [],
    "collectCoverage": true,
    "coverageDirectory": "./coverage/",
    "collectCoverageFrom": [
      "src/js/**/*.js"
    ]
  },
  "resolutions": {
    "**/**/node-fetch": "^2.6.1",
    "**/**/serialize-javascript": "^3.1.0",
    "**/**/ssri": "6.0.2",
    "**/**/postcss": "^8.2.10",
    "**/**/elliptic": "^6.5.4",
